<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CharacterCreationActivity" android:background="@android:color/background_light">

    <ImageView
            android:layout_width="190dp"
            android:layout_height="300dp" app:srcCompat="@drawable/warriorimage"
            android:id="@+id/warriorImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/mageImageView" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="190dp"
            android:layout_height="300dp" app:srcCompat="@drawable/mageimage"
            android:id="@+id/mageImageView"
            app:layout_constraintStart_toEndOf="@+id/warriorImageView" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="190dp"
            android:layout_height="300dp" app:srcCompat="@drawable/archerimage3"
            android:id="@+id/archerImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/warriorImageView"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rogueImageView" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="190dp"
            android:layout_height="300dp" app:srcCompat="@drawable/rogueimage"
            android:id="@+id/rogueImageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mageImageView"
            app:layout_constraintStart_toEndOf="@+id/archerImageView" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Mage"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp" android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/mageImageView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Rogue"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp" android:textAlignment="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rogueImageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Archer"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="24sp" android:textAlignment="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/archerImageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Warrior"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/warriorImageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>